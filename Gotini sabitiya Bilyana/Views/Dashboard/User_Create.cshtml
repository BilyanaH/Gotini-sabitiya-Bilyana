@model Gotini_sabitiya_Bilyana.Models.RegistrationModel

@{
    ViewData["Title"] = "User Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />


<div class="container">
    <div class="row">
        <div class="col-md-6 center-block">
            <form asp-controller="UserAuthentication" asp-action="Registration" method="post">
                <div class="form-group">
                    <label>FirstName</label>
                    <input type="text" class="form-control" asp-for="FirstName" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>


                <div class="form-group">
                    <label>LastName</label>
                    <input type="text" class="form-control" asp-for="LastName" />
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
                <div class="form-group">
                    <label>UserName</label>
                    <input type="text" class="form-control" asp-for="UserName" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>

                @if (User.IsInRole("admin"))
                {
                    <div class="form-group">
                        <label>Role</label>
                        @Html.DropDownListFor(m => m.Role, new SelectList(new List<string> { "User", "Admin" }), new { @class = "form-control" })

                     <!--   <select class="form-control" asp-for="Role">
                            <option value="admin">Admin</option>
                            <option value="user">User</option>
                           </select>-->
                        <span class="text-danger" asp-validation-for="Role"></span>
                    </div>
                }
                else
                {
                <div class="form-group">
                    <label>Role</label>
                    <input type="hidden" class="form-control" asp-for="Role" value="user" />
                    <span class="text-danger" asp-validation-for="Role"></span>
                </div>
                }

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>

                </div>

                <div class="form-group">
                    <label>Password confirm</label>
                    <input type="password" class="form-control" asp-for="PasswordConfirm" />
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>

                </div>



                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        <span class="text-info">@TempData["msg"]</span>
                    </div>
                }

                <button type="submit" asp-controller="UserAuthentication" asp-action="Registration">Create</button>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Users">Back to List</a>
    </div>
</div>
